<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#880E4F"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.admin.calculatenumber.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Here You can calculate Numbers.."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="Large Text"
        android:id="@+id/screen"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:textAppearance="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/seven"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="7"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/eight"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="8"/>
        <Button
            android:layout_width="80dp"
        android:layout_height="wrap_content"
            android:id="@+id/nine"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="9"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:background="@drawable/button"
            android:onClick="onClickOperator"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/four"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="4"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/five"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="5"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/six"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="6"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            android:background="@drawable/button"
            android:onClick="onClickOperator"
            android:text="-"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/three"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="3"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/two"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="2"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/one"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="1"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/mul"
            android:background="@drawable/button"
            android:onClick="onClickOperator"
            android:text="*"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/C"
            android:background="@drawable/button"
            android:onClick="onClickClear"

            android:text="C"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/zero"
            android:background="@drawable/button"
            android:onClick="onClickNumber"
            android:text="0"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/equalto"
            android:background="@drawable/button"
            android:onClick="onClickEqual"
            android:text="="/>
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/div"
            android:background="@drawable/button"
            android:onClick="onClickOperator"
            android:text="/"/>




    </LinearLayout>


</LinearLayout>


